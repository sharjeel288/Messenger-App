<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            app:civ_border_width="2dp"
            android:id="@+id/imageView_latest_message"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_textview_username" app:layout_constraintStart_toEndOf="@+id/imageView_latest_message"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/message_textView_latest_message"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="8dp"
            android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <TextView
            android:text="new messages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/message_textView_latest_message" app:layout_constraintStart_toEndOf="@+id/imageView_latest_message"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/message_textview_username"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>